{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "rootDirs": ["./src", "."],
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./dist",
    "lib": ["ES2020", "DOM"],
    "preserveWatchOutput": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["./src"],
  "exclude": ["./src/**/*.test.ts", "node_modules"]
}
